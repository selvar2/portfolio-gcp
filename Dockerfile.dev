# Development Dockerfile
FROM node:18-alpine

# Install dumb-init
RUN apk add --no-cache dumb-init

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy source
COPY . .

# Expose port
EXPOSE 8080

# Use dumb-init
ENTRYPOINT ["dumb-init", "--"]

# Start in dev mode with hot reload
CMD ["npm", "run", "dev"]
